/* detail.wxss */
page {
  background-color: #f0f2f5;
}

view, image {
  box-sizing: border-box;
  line-height: 1;
}

.card-item {
  display: flex;
  position: relative;
  overflow: hidden;
  /*margin-top: 72rpx;*/
  margin-bottom: 20rpx;
  padding: 40rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f2f5;
}

.card-item.top{
  margin-top: 72rpx;
}

.card-item .card-item-hd {
  float: left;
  margin-right: 45rpx;
  text-align: center;
}

.card-item .card-item-hd image {
  width: 216rpx;
  height: 134rpx;
}

.card-item .card-item-bd {
  float: left;
  width: 360rpx;
  font-size: 26rpx;
}

.card-item .card-item-bd .card-name {
  margin-bottom: 52rpx;
  line-height: 1.3;
  font-size: 30rpx;
  font-family: 'PingFangSC-Medium';
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.detail-cards {
  margin-bottom: 20rpx;
  background-color: #fff;
}

.detail-cards-st {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f2f5;
  font-size: 26rpx;
  color: #999;
}

.detail-cards-list {
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.detail-cards-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
}

.detail-cards-item:last-child {
  border-bottom: none;
}

.cards-item-hd {
  font-size: 26rpx;
  font-weight: 600;
  color: #666;

  display: flex;
  flex: 1;
  justify-content: space-between;
}

.cards-item-hd .card-name{
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cards-item-bd {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;

  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cards-item-bdst {
  display: flex;
  justify-content: space-between;
  width: 556rpx;
}

.cards-item-btn {
  padding: 0 5rpx;
  height: 46rpx;
  line-height: 46rpx;
  border: 1rpx solid #f10e1e;
  border-radius: 3px;
  font-size: 22rpx;
  color: #f10e1e;
  margin-left: 20rpx;
}

.cards-item-bd-status{
  font-weight: 600;
}

.detail-cards-more {
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.cards-icon-arr {
  display: inline-block;
  width: 25rpx;
  height: 14rpx;
  background: url(data:image/png;base64,) no-repeat;
  background-size: cover;
}

.history-item-hd2{
  width: 160rpx;
  height: 160rpx;
}

.history-item-hd2 image{
  width: 160rpx;
  height: 160rpx;
}

.panel-box{
  background-color: #FFF;
  z-index: 1000;

  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}

.panel-close{
  /*display: flex;*/
  position: absolute;
  right: 28rpx;
  top: 28rpx;
  width: 26rpx;
  height: 26rpx;
  background: url('') no-repeat;
  background-size: 26rpx 26rpx;
}

.panel-title{
  color: #666;
  font-size: 28rpx;
  margin: 28rpx 0 40rpx;
  text-align: center;
}

.panel-list{
  color: #333;
  font-size: 26rpx;
}

.panel-item{
  display: flex;
  align-items: center;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
}

.panel-item:last-child{
  border-bottom: none;
}

.panel-item-info{
  width: 590rpx;
  height: 36rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: nowrap;
}

.panel-bottom {
  display: flex;
  width: 100%;
  height: 100rpx;
}

.panel-info-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: 1rpx solid #e5e7ea;
  font-size: 26rpx;
}

.panel-info {
  margin-right: 30rpx;
  font-size: 30rpx;
  text-align: right;
  flex: 1;
}

.panel-btn {
  width: 250rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #f23030;
  border-radius: 0;
  font-size: 36rpx;
  color: #fff;
}

.panel-btn.disabled{
  background-color: #BFBFBF;
  color: #FFF;
}

.check-wrap {
  padding: 32rpx 0 0 20rpx;
  width: 76rpx;
  height: 100rpx;
}

